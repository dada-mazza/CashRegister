        android:summaryOff="@string/not_permit"
        android:summaryOn="@string/permit"
        android:switchTextOff="@string/no"
        android:switchTextOn="@string/yes"
        android:title="@string/permit_making_delivery" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="menuSettingRRO_permit_cancellation"
        android:summaryOff="@string/not_permit"
        android:summaryOn="@string/permit"
        android:switchTextOff="@string/no"
        android:switchTextOn="@string/yes"
        android:title="@string/permit_cancellation" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="menuSettingRRO_permit_return"
        android:summaryOff="@string/not_permit"
