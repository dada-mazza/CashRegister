        <PreferenceScreen
            android:summary="не реалізовано"
            android:title="@string/view_ndi_rules">

        </PreferenceScreen>

        <PreferenceScreen
            android:summary="не реалізовано"
            android:title="@string/view_ndi_users">

        </PreferenceScreen>

