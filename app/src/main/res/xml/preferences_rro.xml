    <SwitchPreference
        android:defaultValue="true"
        android:key="menuSettingRRO_print_uidch"
        android:switchTextOff="@string/no"
        android:switchTextOn="@string/yes"
        android:title="@string/print_uidch" />


    <SwitchPreference
        android:defaultValue="true"
        android:key="menuSettingRRO_cut_ribbon_after_print"
        android:switchTextOff="@string/no"
        android:switchTextOn="@string/yes"
        android:title="@string/cut_tape_after_print" />


    <ListPreference
        android:id = "@+id/menuSettingRRO_mode_sale"
        android:defaultValue="@string/mode_sale_regimes_with_seats"
        android:dialogTitle="@string/mode_sale"
        android:entries="@array/mode_sale_regimes"
        android:entryValues="@array/mode_sale_regimes"
        android:key="menuSettingRRO_mode_sale"
        android:title="@string/mode_sale" />

    <ListPreference
        android:defaultValue="4800"
        android:dialogTitle="@string/rate_rs_232"
        android:entries="@array/rate_rs_232_regimes"
        android:entryValues="@array/rate_rs_232_regimes"
        android:key="menuSettingRRO_rate_rs_232"
        android:title="@string/rate_rs_232" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="menuSettingRRO_permit_overflow_control_tape"
        android:summaryOff="@string/not_permit"
        android:summaryOn="@string/permit"
        android:switchTextOff="@string/no"
        android:switchTextOn="@string/yes"
        android:title="@string/permit_overflow_control_tape" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="menuSettingRRO_accumulation_of_data_in_the_X_reports"
        android:summaryOff="@string/not_permit"
        android:summaryOn="@string/permit"
        android:switchTextOff="@string/no"
        android:switchTextOn="@string/yes"
