<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:onClick="onClickSelectFromListOfTrain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:text="@string/list_of_train"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>

                <TextView
                        android:id="@+id/selectFromListOfTrain"
                        android:hint="@string/select_from_list_of_train"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_of_line"
                        android:maxHeight="1dp"/>

            </LinearLayout>

            <LinearLayout
                    android:onClick="onClickSelectFromListOFWagon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/titleListOfWagon"
                        android:text="@string/list_of_wagon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>

                <TextView
                        android:id="@+id/selectFromListOFWagon"
                        android:hint="@string/select_from_list_of_wagon"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_of_line"
                        android:maxHeight="1dp"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/titleNumberWagon"
                        android:text="@string/number_wagon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>

                <EditText
                        android:id="@+id/enterNumberWagon"
                        android:hint="@string/enter_number_wagon"
                        android:inputType="number"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/et_vertical_margin"
                        android:paddingBottom="@dimen/et_vertical_margin"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_of_line"
                        android:maxHeight="1dp"/>
            </LinearLayout>

            <LinearLayout
                    android:onClick="onClickSelectFromListOfTypesClass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/titleListOfTypesClass"
                        android:text="@string/list_of_types_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>

                <TextView
                        android:id="@+id/selectFromListOfTypesClass"
                        android:hint="@string/select_from_list_of_types_class"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_of_line"
                        android:maxHeight="1dp"/>

            </LinearLayout>

            <LinearLayout
                    android:onClick="onClickSelectFromListOfCarriers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/titleListOfCarriers"
                        android:text="@string/list_of_carriers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>

                <TextView
                        android:id="@+id/selectFromListOfCarriers"
                        android:hint="@string/select_from_list_of_carriers"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_of_line"
                        android:maxHeight="1dp"/>

            </LinearLayout>

            <Button
                    android:id="@+id/next"
                    android:onClick="onClickNext"
                    android:text="@string/next"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>