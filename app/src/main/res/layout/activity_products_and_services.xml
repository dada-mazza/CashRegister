<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:onClick="onClickSelectGood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:text="@string/goods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>


                <TextView
                        android:id="@+id/selectGoods"
                        android:hint="@string/select_name_goods"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_of_line"
                        android:maxHeight="1dp"/>

            </LinearLayout>

            <LinearLayout
                    android:onClick="onClickSelectFromListOfUnitOfMeasurement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:text="@string/unit_of_measurement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>


                <TextView
                        android:id="@+id/selectUnitOfMeasurement"
                        android:hint="@string/select_unit_of_measurement"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_of_line"
                        android:maxHeight="1dp"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:text="@string/quantity_of_goods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>

                <EditText
                        android:id="@+id/enterQuantityOfGoods"
                        android:hint="@string/enter_quantity_of_goods"
                        android:inputType="number"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/et_vertical_margin"
                        android:paddingBottom="@dimen/et_vertical_margin"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_of_line"
                        android:maxHeight="1dp"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:text="@string/total_amount_repay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>

                <EditText
                        android:id="@+id/enterÐ¡ostOfProductsAndServices"
                        android:hint="@string/enter_cost_of_products_and_services"
                        android:inputType="number"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/et_vertical_margin"
                        android:paddingBottom="@dimen/et_vertical_margin"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_of_line"
                        android:maxHeight="1dp"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/addPosition"
                        android:onClick="onClickAddPosition"
                        android:text="@string/add_position"
                        android:layout_weight="1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"/>

                <Button
                        android:id="@+id/next"
                        android:onClick="onClickNext"
                        android:text="@string/next"
                        android:layout_weight="1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>