<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/layoutTypeOfSubscription"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:text="@string/type_of_subscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>

                <Spinner
                        android:id="@+id/typeOfSubscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                </Spinner>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_of_line"
                        android:maxHeight="1dp"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView

                        android:text="@string/quantity_of_month_or_trip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>

                <EditText
                        android:id="@+id/enterQuantityOfMonthOrTrip"
                        android:hint="@string/enter_quantity_of_month_or_trip"
                        android:inputType="number"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/et_vertical_margin"
                        android:paddingBottom="@dimen/et_vertical_margin"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_of_line"
                        android:maxHeight="1dp"/>

            </LinearLayout>

            <TextView
                    android:text="@string/validity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/tv_vertical_margin"
                    android:paddingBottom="@dimen/tv_vertical_margin"/>


            <LinearLayout
                    android:onClick="onClickEnterStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"
                        android:text="@string/start_date"/>

                <TextView
                        android:id="@+id/tvStartDate"
                        android:hint="@string/enter_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>
            </LinearLayout>

            <LinearLayout
                    android:onClick="onClickEnterFinalDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:text="@string/final_date"/>

                <TextView
                        android:id="@+id/tvFinalDate"
                        android:hint="@string/enter_final_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_of_line"
                        android:maxHeight="1dp"/>
            </LinearLayout>


            <LinearLayout
                    android:id="@+id/layoutNominalSubscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/tv_vertical_margin"
                    android:paddingBottom="@dimen/tv_vertical_margin">

                <Switch
                        android:id="@+id/switchNominalSubscription"
                        android:text="@string/subscription"
                        android:onClick="onClickSwitchNominalSubscription"
                        android:singleLine="false"
                        android:textOn="@string/nominal"
                        android:textOff="@string/not_nominal"
                        android:paddingBottom="@dimen/tv_vertical_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_of_line"
                        android:maxHeight="1dp"/>

            </LinearLayout>


            <LinearLayout
                    android:id="@+id/layoutSurnameOfPassenger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:text="@string/surname_of_passenger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>

                <EditText
                        android:id="@+id/enterSurnameOfPassenger"
                        android:hint="@string/enter_surname_of_passenger"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/et_vertical_margin"
                        android:paddingBottom="@dimen/et_vertical_margin"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_of_line"
                        android:maxHeight="1dp"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:text="@string/type_of_blank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>

                <Spinner
                        android:id="@+id/typeOfBlank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                </Spinner>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_of_line"
                        android:maxHeight="1dp"/>

            </LinearLayout>


            <LinearLayout
                    android:id="@+id/layoutNumberPaperOfBlank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView

                        android:text="@string/number_of_paper_blank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>

                <EditText
                        android:id="@+id/enterNumberOfPaperBlank"
                        android:hint="@string/enter_number_of_paper_blank"
                        android:inputType="number"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/et_vertical_margin"
                        android:paddingBottom="@dimen/et_vertical_margin"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_of_line"
                        android:maxHeight="1dp"/>

            </LinearLayout>


            <Button
                    android:id="@+id/next"
                    android:onClick="onClickNext"
                    android:text="@string/next"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>