<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:text="@string/type_of_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tv_vertical_margin"
                android:paddingBottom="@dimen/tv_vertical_margin"/>

        <Spinner
                android:id="@+id/typeOfPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </Spinner>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_of_line"
                android:maxHeight="1dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_of_line"
                android:maxHeight="2dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:text="@string/total"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/tv_vertical_margin"
                    android:paddingBottom="@dimen/tv_vertical_margin"/>


            <TextView
                    android:id="@+id/amountTotal"
                    android:hint="@string/amount"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/et_vertical_margin"
                    android:paddingBottom="@dimen/et_vertical_margin"/>

        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_of_line"
                android:maxHeight="2dp"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/layoutCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:text="@string/payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/tv_vertical_margin"
                    android:paddingBottom="@dimen/tv_vertical_margin"/>


            <EditText
                    android:id="@+id/enterAmount"
                    android:hint="@string/enter_cost"
                    android:inputType="number"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/et_vertical_margin"
                    android:paddingBottom="@dimen/et_vertical_margin"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_of_line"
                    android:maxHeight="1dp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:text="@string/passenger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/tv_vertical_margin"
                    android:paddingBottom="@dimen/tv_vertical_margin"/>


            <EditText
                    android:id="@+id/enterPassenger"
                    android:hint="@string/enter_passenger"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/et_vertical_margin"
                    android:paddingBottom="@dimen/et_vertical_margin"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_of_line"
                    android:maxHeight="1dp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_of_line"
                    android:maxHeight="2dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:text="@string/change"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/tv_vertical_margin"
                        android:paddingBottom="@dimen/tv_vertical_margin"/>


                <TextView
                        android:id="@+id/amountChange"
                        android:hint="@string/amount"
                        android:layout_weight="1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/et_vertical_margin"
                        android:paddingBottom="@dimen/et_vertical_margin"/>

            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_of_line"
                    android:maxHeight="2dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/layoutCashless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:text="@string/payment_document"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tv_vertical_margin"
                android:paddingBottom="@dimen/tv_vertical_margin"/>


        <EditText
                android:id="@+id/enterNumberDocument"
                android:hint="@string/enter_number_document"
                android:inputType="number"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/et_vertical_margin"
                android:paddingBottom="@dimen/et_vertical_margin"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_of_line"
                android:maxHeight="1dp"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/layoutCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:text="@string/authorization_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tv_vertical_margin"
                android:paddingBottom="@dimen/tv_vertical_margin"/>


        <EditText
                android:id="@+id/enterAuthorizationCode"
                android:hint="@string/enter_authorization_code"
                android:inputType="number"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/et_vertical_margin"
                android:paddingBottom="@dimen/et_vertical_margin"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_of_line"
                android:maxHeight="1dp"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/layoutETicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:text="@string/e_ticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tv_vertical_margin"
                android:paddingBottom="@dimen/tv_vertical_margin"/>


        <EditText
                android:id="@+id/enterNumberETicket"
                android:hint="@string/enter_number_e_ticket"
                android:inputType="number"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/et_vertical_margin"
                android:paddingBottom="@dimen/et_vertical_margin"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_of_line"
                android:maxHeight="1dp"/>

    </LinearLayout>

    <Button
            android:id="@+id/next"
            android:onClick="onClickNext"
            android:text="@string/next"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

</LinearLayout>